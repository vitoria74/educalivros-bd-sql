datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario { 
Endereco String 
CPF String @id 
atz Role? @default(USER) 
usuario Professor? 
usuario2 Aluno? 
Usario3 CLIENTE_EXTERNO?
avaliacoes Avaliacao? 

plano_premium Plano_Premium?

} 

model Professor { 
Departamento String 
Disciplina String  
atz Role? @default(USER)
Cpf String @id
Cpfid Usuario @relation(fields: [Cpf], references: [CPF])

}

model Aluno { 
Matricula String 
FALTAS String
atz Role? @default(USER) 
Cpf String @id
Cpfid Usuario @relation(fields: [Cpf], references: [CPF])
} 
 
model CLIENTE_EXTERNO { 
E_mail String @unique 
atz Role? @default(USER) 
Cpf String @id
Cpfid Usuario @relation(fields: [Cpf], references: [CPF])
} 

model Livro { 
Quant_Estoque Int  
ISBN String @id
Titulo String  
atz Role? @default(ADM)
} 

model AudioBook { 
ISBN String @id 
Titulo String 
atz Role? @default(ADM)
}

model Ebook { 
ISBN String @id
Titulo String
atz Role? @default(ADM)
} 

model Entrega { 
Frete Float 
Status String 
Endereco String 
Numero Int @id
atz Role? @default(ADM)
}  

model Autor { 
Classificacao Int @id 
P_Nome String 
S_Nome String 
Numero_de_Vendas Int 
atz Role? @default(ADM)
} 

model Editora { 
Codigo String @id
Nome String 
Endereco String 
E_mail String @unique
atz Role? @default(ADM)
} 

model Categoria { 
Id String @id 
Nome String 
Descricao String 
Numero_de_livros String 
Numero_de_livros_vendidos String 
atz Role? @default(ADM)
}  

model Avaliacao { 
ID String  
Nome Int 
Data DateTime 
Comentarios String 
Nota Float 
atz Role? @default(USER) 
Cpf String @id
Cpfid Usuario @relation(fields: [Cpf], references: [CPF])
} 

model Pedido { 
Data DateTime 
Status String 
Cartao String 
Dinheiro String 
Valor Float
Produto String 
Numero Int @id
atz Role? @default(ADM)
} 

model Plano_Premium{ 
Desconto Int 
Cpf String @id
Cpfid Usuario @relation(fields: [Cpf], references: [CPF])
}

model Jogos_tabuleiro { 
Nome_jogo String 
Codigo_barra String @id 
atz Role? @default(ADM)
} 

model Produto { 
ID String @id 
Nome Int 
atz Role? @default(ADM)

} 

enum Role { 
 USER 
 ADM
}

